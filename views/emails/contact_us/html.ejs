<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <style>
            * {
                margin: 0;
                padding: 0;
            }
            body {
                background-color: #eff3fb;
            }
            .container {
                width: 95%;
                margin-left: auto;
                margin-right: auto;
            }
            @media (min-width: 375px) {
                .container {
                    max-width: 375px;
                    padding-right: 20px;
                    padding-left: 20px;
                }
            }
            @media (min-width: 680px) {
                .container {
                    max-width: 680px;
                    padding-right: 40px;
                    padding-left: 40px;
                }
            }
            p {
                font-size: 14px;
                margin-top: 5px;
                margin-bottom: 5px;
            }
            @media (min-width: 680px) {
                p {
                    font-size: 16px;
                    margin-top: 5px;
                    margin-bottom: 5px;
                }
            }
            .card {
                padding: 32px;
            }
            @media (min-width: 680px) {
                .card {
                    padding: 50px !important;
                }
            }
            h4 {
                font-size: 16px;
                color: #666;
                font-weight: 600;
            }

            .iconpadding {
                padding-top: 24px;
                padding-bottom: 24px;
            }
            @media (min-width: 680px) {
                .iconpadding {
                    padding-top: 40px !important;
                    padding-bottom: 40px !important;
                }
            }
            .iconpaddingleft {
                padding-left: 24px;
                display: inline;
            }
            @media (min-width: 680px) {
                .iconpaddingleft {
                    padding-left: 40px !important;
                }
            }
            a {
                font-size: 16px;
            }
            .imglogo {
                width: 132px;
            }
            @media (min-width: 680px) {
                .imglogo {
                    width: 150px !important;
                }
            }
            h1,
            h4 {
                padding: 0 !important;
                margin: 0 !important;
            }
        </style>
    </head>
    <body>
        <div
            style="
                background: url('<%= IMG_URL %>/email-background.png') #eff3fb;
                background-size: cover;
                background-position: center;
                width: 100%;
            "
        >
            ​​<!--[if gte mso 9]>
<v:rect xmlns_v="urn:schemas-microsoft-com:vml" fill="true" stroke="false" style="width:600px; background-color:#eff3fb;"><v:fill type="frame" src="<%= IMG_URL %>/email-background.png " />
<v:textbox style="mso-fit-shape-to-text:true" inset="0,0,0,0">
<![endif]-->
            <div class="container">
                <table
                    role="presentation"
                    border="0"
                    width="100%"
                    cellspacing="0"
                >
                    <tr>
                        <td align="center">
                            <img
                                class="imglogo"
                                src="<%= IMG_URL %>/logo.png"
                                alt="Logo"
                            />
                            <p></p>
                        </td>
                    </tr>
                </table>
                <table
                    role="presentation"
                    border="0"
                    width="100%"
                    cellspacing="0"
                >
                    <tr>
                        <td
                            style="border-radius: 10px"
                            class="card"
                            bgcolor="#fff"
                        >
                            <h1 style="text-align: center">
                                Massage from Customer
                            </h1>
                            <p style="padding-top: 18px"></p>
                            <h3>
                                Subject: <%= typeof subject !== 'undefined'?
                                subject :''%>
                            </h3>

                            <p>
                                Department: <%= typeof department !==
                                'undefined'? department :''%>
                            </p>
                            <p style="padding-top: 18px"></p>

                            <p style="line-height: 1.5">
                                Description: <%= typeof description !==
                                'undefined'? description :''%>
                            </p>
                            <p style="padding-top: 24px"></p>

                            <p style="font-weight: 600">Customers Details:</p>
                            <% if (typeof customer !== 'undefined') { %>
                            <p>
                                Name: <%= typeof customer.name !== 'undefined'?
                                customer.name :''%>
                            </p>
                            <p>
                                Email: <%= typeof customer.email !==
                                'undefined'? customer.email :''%>
                            </p>
                            <p>
                                Type: <%= typeof customer.type !== 'undefined'?
                                customer.type :''%>
                            </p>
                            <% } %>
                        </td>
                    </tr>
                </table>
                <table role="presentation">
                    <tr>
                        <td>
                            <p style="padding-top: 100px"></p>
                        </td>
                    </tr>
                </table>
            </div>
            <!--[if gte mso 9]>
</v:textbox>
</v:rect>
<![endif]-->
        </div>
    </body>
</html>
